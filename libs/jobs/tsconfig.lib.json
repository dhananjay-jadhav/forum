{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": false,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "references": [
        {
            "path": "../utils/tsconfig.lib.json"
        },
        {
            "path": "../database/tsconfig.lib.json"
        },
        {
            "path": "../email/tsconfig.lib.json"
        },
        {
            "path": "../notifications/tsconfig.lib.json"
        },
        {
            "path": "../moderation/tsconfig.lib.json"
        },
        {
            "path": "../cleanup/tsconfig.lib.json"
        }
    ],
    "exclude": ["jest.config.ts", "jest.config.cts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
